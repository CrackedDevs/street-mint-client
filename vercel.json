{
  "framework": "nextjs",
  "functions": {
    "app/api/**/*": {
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/schedule-collectible",
      "schedule": "* * * * *"
    },
    {
      "path": "/api/cron/create-daily-collectibles",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/update-chip-links",
      "schedule": "0 * * * *"
    }
  ]
}